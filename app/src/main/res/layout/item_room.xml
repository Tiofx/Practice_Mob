<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/photoRoom"
                android:layout_width="450dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="centerCrop"
                tools:background="@drawable/room" />

            <TextView
                android:id="@+id/titleRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/photoRoom"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="#ffffff"
                android:textSize="30sp"
                tools:text="Комната" />


            <LinearLayout
                android:id="@+id/linePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_below="@+id/photoRoom">

                <ImageView
                    android:id="@+id/imagePrice"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/price" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    tools:text=": 500$/сутки" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ratingHotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linePrice"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/imagePeople"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bed" />

                <TextView
                    android:id="@+id/numberPeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    tools:text=": 2" />
            </LinearLayout>

            <View
                android:id="@+id/lineRoom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ratingHotel"
                android:background="@android:color/darker_gray" />

            <Button
                style="@style/Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lineRoom"
                android:layout_marginLeft="10dp"
                android:background="@android:color/transparent"
                android:text="@string/detail"
                android:textColor="#0077CC" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>