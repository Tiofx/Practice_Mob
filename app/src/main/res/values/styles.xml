<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="RootContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/indent_large</item>
        <item name="android:background">@drawable/background</item>
    </style>


    <style name="Text">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Text.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/title_normal_size</item>
        <item name="android:paddingBottom">@dimen/indent_large</item>
        <item name="android:paddingTop">@dimen/indent_normal</item>
    </style>

    <style name="Text.MainTitle">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/title_large_size</item>
        <item name="android:paddingBottom">@dimen/indent_large</item>
    </style>


    <style name="InputField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ems">10</item>
    </style>

    <style name="InputField.Star">
        <item name="android:numStars">@integer/hotel_star_number</item>
        <!--<item name="android:progressTint">@color/blue</item>-->
    </style>

    <style name="InputField.Feedback">
        <item name="android:maxRows">5</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


    <style name="Button">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@color/blue</item>
    </style>


    <style name="Button.Transparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="Button.Transparent.AddButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.Transparent.Bottom">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="Button.BottomLevel">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button.Small">
        <item name="android:layout_marginTop">@dimen/indent_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.Small.BottomRight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:padding">@dimen/indent_small</item>
    </style>

    <style name="Button.Small.TopRight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

</resources>